{
  "name": "@quranjs/api",
  "description": "A library for fetching quran data from the quran.com API.",
  "author": "Ahmed Riad <me@ar1.dev> (https://ar1.dev)",
  "publishConfig": {
    "access": "public"
  },
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/api.esm.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "start": "dts watch",
    "build": "dts build",
    "test": "dts test",
    "test:dev": "dts test --watch",
    "lint": "dts lint src test mocks",
    "prepare": "husky install",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/humps": "^2.0.1",
    "dts-cli": "^1.4.0",
    "fast-check": "^3.3.0",
    "husky": "^7.0.4",
    "msw": "^0.39.2",
    "rollup-plugin-analyzer": "^4.0.0",
    "size-limit": "^7.0.8",
    "tslib": "^2.3.1",
    "typescript": "^4.6.2"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/api.cjs.production.min.js",
      "limit": "15 KB"
    },
    {
      "path": "dist/api.esm.js",
      "limit": "15 KB"
    }
  ],
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "cross-fetch": "^3.1.5",
    "humps": "^2.0.1"
  }
}
